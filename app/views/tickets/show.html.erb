<h1>Ticket Details for Ticket #<%= @id %></h1>

<div class="row">
	<div class="span6">
		<%= form_tag(ticket_path(params[:id]), :method => :put) do %>
			<%= label_tag :comment, 'Add Your Comment' %>
			<%= text_area_tag :comment, nil, :rows => 10, class: "input-xxlarge" %>
			<p><%= submit_tag "Add Your Comment", class: "btn btn-large btn-primary" %></p>
		<% end %>
	</div>
	
</div>
<div class="row">
	<div class="span6">
		<h2>Previous Comments</h2>
		<ul class = "comments_list">
		<% @comments.each do |comment| %>
			<li><%= comment.body %></li>
		<% end %>
	</ul>
	</div>
</div>